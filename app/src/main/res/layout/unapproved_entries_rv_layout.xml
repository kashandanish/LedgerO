<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
android:id="@+id/main_layout_unapprovedEntries"
        android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/entry_title_tv_unApprovedEntries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"

            android:text="Title"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/entry_timeStamp_tv_unApprovedEntries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/ropa_sans_regular"
            android:text="Thu,20 Jan | 12:37 AM"
            android:textColor="#50222121"
            android:textFontWeight="400"
            android:textSize="18sp"></TextView>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="7dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/buttons_layout_unapprovedEntries"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_accept_unapprovedentries"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"

                android:background="@drawable/notification_view_background"
                android:elevation="5dp"
                app:backgroundTint="@color/puce"
                app:icon="@drawable/ic_tick_white_black_bg_foreground"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_reject_unapprovedentries"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"

                android:background="@drawable/notification_view_background"
                android:elevation="5dp"
                app:backgroundTint="@color/black"
                app:icon="@drawable/ic_cancel_cross"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/waitingText_tv_unapprovedEntries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/unapproved_screen_waitingtext"
            android:textColor="@color/puce"
            android:textFontWeight="700"
            android:textSize="12sp"
            android:visibility="gone"

            >

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="110dp"
        android:layout_height="match_parent"

        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/entry_amount_tv_unApprovedEntries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ropa_sans_regular"
            android:text="Rs. 00"
            android:textColor="@color/red"
            android:textFontWeight="400"
            android:textSize="14sp"></TextView>

        <TextView
            android:id="@+id/entry_modeFlag_tv_unApprovedEntries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/entry_title_tv_indvidualLedger"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/ropa_sans_regular"

            android:text="You gave"
            android:textColor="#50222121"
            android:textFontWeight="400"
            android:textSize="10sp"></TextView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>